{{#presenter-container class="layout-column flex" as |container|}}
  {{#container.header}}
    {{#paper-toolbar-tools}}
      {{#paper-button iconButton=true onClick=(action "goBack")}}
        {{paper-icon "arrow_left_alt"}}
      {{/paper-button}}
      <h2>S8-C recommender engine</h2>
      <span class="flex"></span>
      <span>3/4</span>
    {{/paper-toolbar-tools}}
  {{/container.header}}

  {{#container.content class="min-width-70 layout-column flex" as |card|}}
    {{#paper-form class="layout-column flex" onSubmit=(action "proceed") as |form|}}
      {{#card.content class="flex layout-column card-content"}}
        <div class="layout-column md-padding">
          <span class="md-padding">
            Thanks to the location data we collect, we can try to understand your interests and provide you with new categories based on the locations you have visited.
          </span>
          <span class="md-padding">
            Please select whether you want us to notify you when we discover a category you might be interested in and if you do, what their default behavior should be.
          </span>

          {{#paper-radio-group
                  class="layout-column"
                  groupValue=(readonly notificationMode)
                  onChange=(action (mut notificationMode)) as |group|}}
            {{#group.radio value="manual" primary=true}}
              <b>Add manually</b>
              <p>The category will only be added to your profile if you press <b>Yes</b> when the notification appears. If you ignore the notification, the category will not be added.</p>
            {{/group.radio}}
            {{#group.radio value="automatic" primary=true}}
              <b>Add automatically</b>
              <p>The category will be added to your profile unless you press <b>No</b> when the notification appears. If you ignore the notification, the category will be added.</p>
            {{/group.radio}}
            {{#group.radio value="none" primary=true}}
              <b>No additional customization</b>
              <p>Your location will not be used to tailor your preferences.</p>
            {{/group.radio}}
          {{/paper-radio-group}}
        </div>

