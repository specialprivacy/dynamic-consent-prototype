{{#paper-list class="layout-column"}}
  {{#paper-subheader}}Your preferred categories{{/paper-subheader}}
  {{#each categories as |category index|}}
    {{#if (not-eq index 0)}}
      {{paper-divider class="md-padding"}}
    {{/if}}
    {{#paper-item class="md-3-line" as |controls|}}
      <img title={{category.name}} height="20" width="20" src={{category.icon}} alt={{category.name}} class="md-avatar flex-10">
      <div class="md-list-item-text flex-80">
        <h3>{{category.name}}</h3>
      </div>
      <div class="md-secondary-container flex-10">
        {{#controls.button iconButton=true onClick=(action "delete" category)}}
          {{paper-icon "delete_forever"}}
        {{/controls.button}}
      </div>
    {{/paper-item}}
  {{else}}
    We did not infer any interest for any categories from your locations.
  {{/each}}
{{/paper-list}}